-- Ajout des champs financiers pour le mode Passerelle Vente

ALTER TABLE affaires ADD COLUMN montant_ht DECIMAL(10, 2) DEFAULT 0.00;
ALTER TABLE affaires ADD COLUMN date_signature DATE DEFAULT NULL;

